{
  "name": "life-line-app-server",
  "version": "1.0.0",
  "engines": {
    "node": "16.6.1",
    "npm": "8.4.0"
  },
  "type": "module",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VirtueAndTerror/life-line-clothing.git"
  },
  "author": "Arnaldo Diaz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VirtueAndTerror/life-line-clothing/issues"
  },
  "homepage": "https://github.com/VirtueAndTerror/life-line-clothing#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "stripe": "^8.201.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  }
}
